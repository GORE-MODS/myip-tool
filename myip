#!/bin/bash

# Enhanced myip with colors

# Color codes
YELLOW="\e[1;33m"
GREEN="\e[0;32m"
BLUE="\e[0;34m"
GRAY="\e[0;37m"
RESET="\e[0m"

echo -e "${YELLOW}==============================${RESET}"
echo -e "${YELLOW}   IP Address Info By GORE       ${RESET}"
echo -e "${YELLOW}==============================${RESET}"

# List all network interfaces and their IPs
echo -e "${GREEN}Local IPs:${RESET}"
for iface in $(ip -o link show | awk -F': ' '{print $2}'); do
    ip_addr=$(ip -4 addr show "$iface" | grep -oP '(?<=inet\s)\d+(\.\d+){3}')
    if [ -n "$ip_addr" ]; then
        printf "  %-15s : ${GREEN}%s${RESET}\n" "$iface" "$ip_addr"
    fi
done

echo -e "${GRAY}------------------------------${RESET}"

# Get public IP
echo -n "Public IP: "
if ping -c 1 -W 1 8.8.8.8 &>/dev/null; then
    PUBLIC_IP=$(curl -s https://api.ipify.org)
    echo -e "${BLUE}$PUBLIC_IP${RESET}"
else
    echo -e "${BLUE}No internet connection${RESET}"
fi

echo -e "${YELLOW}==============================${RESET}"

